<%- include('../partials/header') %>

<h2 class="text-3xl font-bold mb-6">Edit Contact</h2>
<form action="/contacts/<%= contact._id %>?_method=PUT" method="POST" class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <div class="mb-4">
    <label for="name" class="block font-semibold text-gray-700">Name:</label>
    <input type="text" id="name" name="name" value="<%= contact.name %>" class="mt-1 p-2 block w-full border rounded-md focus:outline-none focus:ring focus:border-blue-500">
  </div>

  <div class="mb-4">
    <label for="phone" class="block font-semibold text-gray-700">Phone:</label>
    <input type="text" id="phone" name="phone" value="<%= contact.phone %>" class="mt-1 p-2 block w-full border rounded-md focus:outline-none focus:ring focus:border-blue-500">
  </div>

  <div class="mb-4">
    <label for="email" class="block font-semibold text-gray-700">Email:</label>
    <input type="email" id="email" name="email" value="<%= contact.email %>" class="mt-1 p-2 block w-full border rounded-md focus:outline-none focus:ring focus:border-blue-500">
  </div>

  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Save Changes</button>
</form>

<%- include('../partials/footer') %>
