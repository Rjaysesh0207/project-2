<%- include('../partials/header') %>

<h2 class="text-3xl font-bold mb-6">Enter a New Event</h2>
<form class="max-w-md" action="/events" method="POST">
  <label class="block mb-4">
    <span class="text-gray-700 font-semibold">Title:</span>
    <input class="block w-full mt-1 px-4 py-2 rounded-lg border-2 border-gray-200 focus:ring-blue-500 focus:border-blue-500" type="text" name="title" required/>
  </label><br>
  <label class="block mb-4">
    <span class="text-gray-700 font-semibold">When is the event:</span>
    <input class="block w-full mt-1 px-4 py-2 rounded-lg border-2 border-gray-200 focus:ring-blue-500 focus:border-blue-500" placeholder="" type="datetime-local" name="date" required>
  </label><br>
  <label class="block mb-4">
    <span class="text-gray-700 font-semibold">Location:</span>
    <input class="block w-full mt-1 px-4 py-2 rounded-lg border-2 border-gray-200 focus:ring-blue-500 focus:border-blue-500" type="text", name="location" required>
  </label><br>

  <h3 class="text-2xl font-bold mb-3">Guest List</h3>
  <% contacts.forEach(function(contact) { %>
    <label class="block mb-2">
      <input class="mr-2 leading-tight" type="checkbox" name="guests" value="<%= contact._id %>" required>
      <span><%= contact.name %></span>
    </label><br>
  <% }) %>

  <button class="mt-4 inline-block bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition-colors" type="submit">Create Event</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>